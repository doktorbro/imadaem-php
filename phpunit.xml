<?xml version="1.0" encoding="UTF-8"?>

<phpunit
    bootstrap="tests/bootstrap.php"
    colors="true"
>
    <testsuites>
        <testsuite name="Imadaem Test Suite">
            <directory>./src/Penibelst/Imadaem/Tests/</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="coverage-text" target="php://stdout"/>
    </logging>

    <filter>
        <whitelist>
            <directory>./src/Penibelst/Imadaem</directory>
            <exclude>
                <directory>./src/Penibelst/Imadaem/Tests</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>
